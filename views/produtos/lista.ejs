            <thead>
                <tr>
                    <td>Titulo</td>
                    <td>preco</td>
                    <td>descricao</td>
                </tr>
            </thead>
            <tbody>

                <% for(let i=0; i<lista.length; i++){ %>

                    <tr>

                        <td><%= lista[i].titulo %></td>
                        <td><%= lista[i].preco %></td>
                        <td><p><%= lista[i].descricao %></p></td>

                    </tr>

                <%} %>

            </tbody>

          </table>
           
           <a href="/produtos/form" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Novo livro</a>
        </div>
    </div>

